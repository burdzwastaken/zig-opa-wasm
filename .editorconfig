root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml,sh,bash,nix,ts}]
indent_style = space
indent_size = 2

[*.{md,diff,zig}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.rego]
indent_style = tab
indent_size = 4
